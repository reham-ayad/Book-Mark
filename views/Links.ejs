<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Saved Links</title>

  <!-- Bootstrap + Animate + Font Awesome + Google Fonts -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;700&display=swap" rel="stylesheet" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Courgette&display=swap" rel="stylesheet">
<link rel="stylesheet" href="allLinks.css">   
</head>
<body>

    <div class="container my-5">
        <!-- Header -->
        <header class="header d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeIn animate__delay-1s">
          <h1 class="display-4">Saved Links</h1>
        </header>
      
        <!-- Links Cards -->
        <div class="row animate__animated animate__fadeIn animate__delay-2s">
          <% arr.forEach((element) => { %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card link-card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                  <h5 class="card-title">
                    <a href="<%= element.LinkURL %>" target="_blank" class="link-title">
                      <i class="fas fa-link"></i> View Link
                    </a>
                  </h5>
                  <p class="card-text"><strong>Description:</strong> <%= element.Description %></p>
                  <p class="card-text"><strong>Password:</strong> <%= element.Password %></p>
                  <div class="action-buttons mt-auto d-flex">

                    <!-- <button  class="btn edit-btn"><a href="/edit/<%= element._id  %>" ><i class="fas fa-edit"></i></a>  </button> -->

                    
                      <form method="POST" href="/edit/<%= element._id  %>"  action="/edit/<%= element._id  %>?_method=PUT">
                        <button type="submit"class="btn edit-btn"><i class="fas fa-edit"></i></button>
                      </form>



                    <form method="POST" action="/Links/<%= element._id  %>?_method=DELETE">
                        <button type="submit"class="btn delete-btn"><i class="fas fa-trash-alt"></i></button>
                      </form>
                      

                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
      
      <!-- Add New Link Button -->
<div class="text-center">
    <a href="/home" class="btn add-link-btn animate__animated animate__bounceIn">+ Add New Link</a>
  </div>
  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>